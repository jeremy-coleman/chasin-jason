{
  "compilerOptions": {
    "sourceMap": false,
    "declaration": false,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "experimentalDecorators": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": false,
    "noImplicitAny": false,
    "outDir": "dist",
    "baseUrl": "src",
    "lib": ["dom", "esnext"],
  },
  "include": ["src", "tools"],
  "exclude": ["node_modules", "lib"]
}
